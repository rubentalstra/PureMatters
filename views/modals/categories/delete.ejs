<!-- Modal Delete Category -->
<div
    class="modal fade"
    id="delCategory"
    data-bs-backdrop="static"
    data-bs-keyboard="false"
    tabindex="-1"
    aria-labelledby="staticBackdropLabel"
    aria-hidden="true"
>
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form
                method="post"
                action="/api/settings/categories/delete"
                enctype="application/x-www-form-urlencoded"
            >
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Categorie Verwijderen</h5>
                    <button
                        type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"
                    ></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="idDeleteCategory" name="idDeleteCategory" value="" />
                    Weet u zeker dat u Categorie:
                    <input
                        class="form-control"
                        name="nameDeleteCategory"
                        id="nameDeleteCategory"
                        value=""
                        disabled
                    />
                    wilt verwijderen?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Ja</button>
                </div>
            </form>
        </div>
    </div>
</div>
