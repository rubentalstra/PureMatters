<!-- Modal create Manufacturers -->
<div class="modal fade" id="createReserved" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form method="post" action="/api/products/reserved/create" enctype="application/x-www-form-urlencoded">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Reservering toevoegen</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="productId" name="productId" value="<%= id %>" />
                    <input type="hidden" id="ProductReservedAmount" name="ProductReservedAmount"
                        value="<%= ProductReservedAmount %>" />
                    <input type="number" min="0" class="form-control" name="amount" id="amount" value=""
                        placeholder="Hoeveelheid" required />
                    <hr />
                    <textarea name="notes" id="notes" rows="13" style="height: 100%; width: 100%"
                        placeholder="hier kun je de notes kwijt."></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Ja</button>
                </div>
            </form>
        </div>
    </div>
</div>